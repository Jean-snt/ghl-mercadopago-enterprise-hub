# Configuración de Base de Datos
DATABASE_URL=postgresql://user:password@localhost:5432/mercadopago_enterprise
# Para desarrollo: sqlite:///./mercadopago_enterprise.db

# MercadoPago Configuration
MP_ACCESS_TOKEN=your_mercadopago_access_token
MP_WEBHOOK_SECRET=your_webhook_secret_key

# MercadoPago OAuth Configuration
MP_CLIENT_ID=your_mp_client_id
MP_CLIENT_SECRET=your_mp_client_secret
MP_REDIRECT_URI=https://your-domain.com/oauth/callback

# GoHighLevel Configuration
GHL_API_KEY=your_ghl_api_key

# GoHighLevel OAuth Configuration (Multi-tenant)
GHL_CLIENT_ID=your_ghl_client_id
GHL_CLIENT_SECRET=your_ghl_client_secret
GHL_REDIRECT_URI=https://your-domain.com/oauth/callback/callback
GHL_SCOPES=contacts.read,contacts.write,tags.read,tags.write

# Security
ADMIN_API_KEY=your_super_secure_admin_key

# Application
BASE_URL=https://your-domain.com
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO

# ============================================
# CONFIGURACIÓN DE AMAZON S3 PARA ARCHIVADO
# ============================================

# Credenciales de AWS (REQUERIDAS para S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Configuración del bucket S3
S3_BUCKET_NAME=mercadopago-enterprise-logs
S3_LOG_PREFIX=mercadopago-enterprise-logs
S3_STORAGE_CLASS=STANDARD_IA

# Configuración de archivado automático
ARCHIVE_ENABLED=true
ARCHIVE_OLDER_THAN_DAYS=90
ARCHIVE_COMPRESS=true

# ============================================
# CONFIGURACIÓN DE NOTIFICACIONES EN TIEMPO REAL
# ============================================

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts
SLACK_USERNAME=MercadoPago-Bot

# Email Notifications (Gmail example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
TO_EMAILS=admin1@company.com,admin2@company.com,security@company.com

# Webhook Notifications
WEBHOOK_URLS=https://your-webhook-endpoint.com/alerts,https://backup-webhook.com/notifications

# Notification Settings
MIN_NOTIFICATION_PRIORITY=medium  # low, medium, high, critical
NOTIFICATION_RATE_LIMIT=5  # minutes between same event type notifications